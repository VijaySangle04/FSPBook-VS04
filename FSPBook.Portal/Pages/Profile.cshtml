@page "{id:int}"
@model FSPBook.Portal.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1>@Model.Profile.FullName</h1>
        <h4>@Model.Profile.JobTitle</h4>
    </div>
    <h3 class="mt-4" style="text-align:center">Recent Posts</h3>
    @if (Model.Posts.Any())
    {
        <ul class="list-group">
            @foreach (var post in Model.Posts)
            {
                <li class="list-group-item">
                    <small class="float-right text-info">
                        @post.DateTimePosted.ToString("f")
                    </small>
                    <br />
                    <pre style="white-space: pre-wrap; max-height: 7.5em; overflow: auto">@post.Content</pre>
                </li>
            }
        </ul>
    }
    else
    {
        <ul class="list-group">
            <li class="list-group-item text-info text-center">
                <p>No posts by @Model.Profile.FullName.</p>
            </li>
        </ul>
    }
</div>